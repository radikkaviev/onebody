<div class="verse">
  <div class="verse-heading">
    <strong><%= link_to h(verse.reference), verse %></strong>
    <% unless @person %>
      <% if verse.people.count > 0 %>
        saved by <%= pluralize(verse.people.count, I18n.t("person"), I18n.t("people")) %>
      <% end %>
    <% end %>
  </div>
  <div class="verse-body">
    <%=h verse.text %>
  </div>
  <% unless @person %>
    <div class="comment-summary">
      <%= render :partial => 'comments/comment_summary', :locals => {:object => verse} %>
    </div>
  <% end %>
</div>
