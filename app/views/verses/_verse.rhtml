<p>
  <div class="verse-heading">
    <strong><%= link_to verse.reference, :controller => 'verses', :action => 'view', :id => verse.reference %></strong>
    <% unless @person %>
      (<%= verse.people_count %> <%= verse.people_count == 1 ? 'person' : 'people' %>)
    <% end %>
    <% if @person or verse.admin? @logged_in %>
      <%= link_to '[edit]', {:controller => 'verses', :action => 'view', :id => verse.reference}, :class => 'discreet' %>
    <% end %>
    <% if @person and @person == @logged_in %>
      <%= link_to '[delete]', {:action => 'remove_verse', :id => verse}, :class => 'discreet', :confirm => 'Are you sure?', :post => true %>
    <% end %>
    <% unless @person %>
      Tags: <%= render :partial => 'tags/tags_with_delete', :locals => {:object => verse} %>
    <% end %>
  </div>
  <div class="verse-body">
    <%=h verse.text %>
  </div>
</p>