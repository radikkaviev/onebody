<p id="add_verse_link" style="display:none;"><%= link_to_function image_tag('add_small.gif', :alt => t('verses.add_verse'), :class => 'icon') + ' ' + t('verses.add_verse'), "show_verse_form();" %></p>
<div id="add_verse">
  <%= form_for Verse.new do |form| %>
    <p>
      <%= t('verses.type_a_reference_below_and_hit_enter') %><br/>
      <%= text_field_tag :id, nil, :style => 'border:1px solid #ccc;width:100px;' %>
      <%= submit_tag t('verses.add_verse'), :style => 'width:100px;' %>
    </p>
  <% end %>
</div>

<script type="text/javascript">
  if(location.hash == '#add') {
    $('#id')[0].focus();
  } else {
    $('#add_verse').hide();
    $('#add_verse_link').show();
  }
  function show_verse_form() {
    $('#add_verse').show();
    $('#add_verse_link').hide();
    $('#id')[0].focus();
  }
</script>
