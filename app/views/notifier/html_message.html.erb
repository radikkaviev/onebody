<% if intro = @msg.introduction(@to) %><p><%=h intro %></p><% end -%>
<%= white_list(@msg.html_body) %>
<p>
  - - - - - - - - - - - - - - - - - - - - - - - -<br/>
  <%= @msg.reply_instructions(@to).gsub(/\n/, "<br/>\n") %>
