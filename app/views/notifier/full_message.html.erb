<% if intro = @msg.introduction(@to) %><p><%= intro %></p><% end -%>
<%= white_list_with_removal(@msg.html_body) %>
<p>
  - - - - - - - - - - - - - - - - - - - - - - - -<br/>
  <%=raw @msg.reply_instructions(@to).gsub(/\n/, "<br/>\n") %>
  <%=raw @msg.disable_email_instructions(@to).gsub(/\n/, "<br/>\n") %>
</p>
<% if @id_and_code %>
<p style="font-size:smaller;color:gray;"><%= t('notifier.message_id') %>: <%= @id_and_code %></p>
<% end -%>
