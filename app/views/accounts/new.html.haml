= error_messages_for(@verification) if @verification

.row
  .col-md-6
    %h2= t('accounts.create')
    - if Setting.get(:features, :sign_up)
      = form_for @signup, as: :signup, url: account_path, method: 'post' do |form|
        = error_messages_for(form)
        %p
          .form-group
            = form.label :email, t('people.email')
            = form.text_field :email, class: 'form-control'
          .form-group
            = form.label :first_name, t('accounts.first_name')
            = form.text_field :first_name, class: 'form-control'
          .form-group
            = form.label :last_name, t('accounts.last_name')
            = form.text_field :last_name, class: 'form-control'
          .form-group
            = form.label :gender, t('accounts.gender')
            = form.select :gender, [[t('search.male'), 'Male'], [t('search.female'), 'Female']], {include_blank: true}, class: 'form-control'
          .form-group
            = form.label :birthday, t('accounts.birthday')
            = form.date_field :birthday, class: 'form-control'
          .form-group
            = form.text_field :a_phone_number, id: 'dummy_phone'
            = form.submit t('accounts.create'), class: 'btn btn-primary'

    - else
      %p= t('accounts.this_site_doesnt_allow_signup', office_phone: Setting.get(:contact, :community_office_phone))

  .col-md-6
    %h2= t('accounts.verify')
    = render partial: 'how_to_verify'

:css
  #dummy_phone { display: none; }

:javascript
  $('#person_birthday').datepicker({
    changeYear: true,
    yearRange:  '1900:2025',
    dateFormat: '#{datepicker_format}'
  });
