  <% if Setting.get(:features, :pictures)     %><%= link_to 'Pictures',     albums_path              %><% end %>
  <% if Setting.get(:features, :verses)       %><%= link_to 'Verses',       verses_path              %><% end %>
  <% if Setting.get(:features, :recipes)      %><%= link_to 'Recipes',      recipes_path             %><% end %>
