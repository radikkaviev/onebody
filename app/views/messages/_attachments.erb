<% if message.attachments.any? %>
  <p>
    <strong><%= t('messages.attachments') %>:</strong><br/>
    <% message.attachments.each do |attachment| %>
      <%= link_to attachment.name, [message, attachment] %>
      (<%= number_to_human_size(attachment.file.size) rescue t('messages.file_missing') %>)
      <br/>
    <% end %>
  </p>
<% end %>
