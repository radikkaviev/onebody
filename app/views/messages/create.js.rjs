if @preview
  page.replace_html 'preview-from', t('messages.from') + ': ' + h(@preview.from)
  page.replace_html 'preview-subject', t('messages.subject') + ': ' + h(@preview.subject)
  page.replace_html 'preview-email', simple_format(auto_link(h(get_email_body(@preview))))
  page.show 'preview'
end
