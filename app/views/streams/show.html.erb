<% content_for :head do %>
  <link rel="alternate" type="application/atom+xml" title='<%= t("stream.feed") %>' href="<%= url_for stream_path(:format => 'xml', :code => @logged_in.feed_code) %>"/>
<% end %>

<% content_for :subnav do %>
  <% if Setting.get(:features, :pictures    ) %><li><%= link_to image_tag('picture.png',   :alt => t('pictures.all_pictures'),         :class => 'icon') + ' ' + t('pictures.all_pictures'),         albums_path       %></li><% end %>
  <% if Setting.get(:features, :verses      ) %><li><%= link_to image_tag('verse.png',     :alt => t('verses.all_verses'),             :class => 'icon') + ' ' + t('verses.all_verses'),             verses_path       %></li><% end %>
  <% if Setting.get(:features, :recipes     ) %><li><%= link_to image_tag('recipe.png',    :alt => t('recipes.all_recipes'),           :class => 'icon') + ' ' + t('recipes.all_recipes'),           recipes_path      %></li><% end %>
  <% if Setting.get(:features, :news_page   ) %><li><%= link_to image_tag('newspaper.png', :alt => t('news.all_news'),                 :class => 'icon') + ' ' + t('news.all_news'),                 news_path         %></li><% end %>
  <% if Setting.get(:features, :publications) %><li><%= link_to image_tag('page.png',      :alt => t('publications.all_publications'), :class => 'icon') + ' ' + t('publications.all_publications'), publications_path %></li><% end %>
<% end %>

<div style="width:200px;float:right;">
  <%= render :partial => 'people/photo', :locals => {:url => @person} %>
  <h1><%= @person.name %></h1>
  <p>
    <% if @person.share_home_phone?   and @person.home_phone.to_s.any?            %><%= format_phone @person.home_phone            %> <%= t('profile.home') %>  <br/><% end %>
    <% if @person.share_mobile_phone? and @person.mobile_phone.to_s.any?          %><%= format_phone @person.mobile_phone          %> <%= t('profile.mobile') %><br/><% end %>
    <% if @person.share_work_phone?   and @person.work_phone.to_s.any?            %><%= format_phone @person.work_phone            %> <%= t('profile.work') %>  <br/><% end %>
    <% if @person.share_fax?          and @person.fax.to_s.any?                   %><%= format_phone @person.fax                   %> <%= t('profile.fax') %>   <br/><% end %>
    <% if @person.share_address?      and @person.family.pretty_address.to_s.any? %><%= preserve_breaks @person.family.pretty_address %>    <br/><% end %>
  </p>

  <table class="cells-centered" style="margin-top:20px;">
    <tr>
      <td class="graphic" style="padding-bottom:20px;">
        <%= link_to_function image_tag('add.png', :alt => t("stream.share_something"), :class => 'icon'), "shareSomething()" %>
      </td>
      <td style="padding-bottom:20px;">
        <%= link_to_function t("stream.share_something").sub(/\s/, '<br/>').html_safe, "shareSomething()" %>
      </td>
    </tr>
    <tr>
      <td class="graphic">
        <%= link_to image_tag('feed.gif', :alt => t('stream.feed'), :class => 'icon'), stream_path(:format => 'xml', :code => @logged_in.feed_code) %>
      </td>
      <td>
        <%= link_to t('stream.feed'), stream_path(:format => 'xml', :code => @logged_in.feed_code) %>
      </td>
    </tr>
  </table>
  
  <h2><%= t("stream.import_from") %></h2>
  <p style="padding-left:10px;">
    <%= link_to image_tag('twitter.png', :alt => t("stream.import_twitter_updates"), :class => 'icon') + ' ' + t("stream.twitter"), new_person_feed_path(@logged_in, :type => 'twitter'), :style => 'text-decoration:none;' %><br/>
    <%= link_to image_tag('flickr.png', :alt => t("stream.import_flickr_photos"), :class => 'icon') + ' ' + t("stream.flickr"), new_person_feed_path(@logged_in, :type => 'flickr'), :style => 'text-decoration:none;' %><br/>
    <%= link_to image_tag('rss.png', :alt => t("stream.import_blog_feed"), :class => 'icon') + ' ' + t("stream.blog"), new_person_feed_path(@logged_in, :type => 'rss'), :style => 'text-decoration:none;' %><br/>
  </p>
</div>

<% if @has_friendship_requests %>
  <div class="highlight">
    <%= image_tag('user_add.png', :alt => t('friends.friends'), :class => 'icon') %>
    <%= t('friends.you_have_pending_requests_html', :url => person_friends_path(@person)) %>
  </div>
<% end %>

<div id="stream-page-body">

  <div id="share" style="display:none;">
    <%= render :partial => 'share' %>
  </div>

  <div class="stream-items">
    <p id="share-something">
      <%= link_to_function image_tag('add_small.gif', :alt => t('stream.share_something'), :class => 'icon'), "shareSomething()" %>
      <%= t('stream.share_something_here_html', :js => "shareSomething()") %>
    </p>
    <%= render :partial => 'stream_items' %>
  </div>

<% content_for :head do %>
  <script type="text/javascript"> ALBUMS_JSON_PATH = '<%= person_albums_path(@logged_in.id) %>'; </script>
<% end %>

<script type="text/javascript"> set_up_tabs(); </script>

<% if session[:touring] %><%= tour_popup('Home Tab', '/pages/help/tour_home', 450, 'right') %><% end %>
