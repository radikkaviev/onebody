<h2 class="tab" id="news"><%= image_tag('newspaper.png', :alt => I18n.t('news.news'), :class => 'icon')%> <%= I18n.t('news.news') %></h2>
<div class="section">
  <%= form_for NewsItem.new do |form| %>
    <%= hidden_field_tag :redirect_to, request.fullpath %>
    <p>
      <%= form.label :title, I18n.t('news.title_description') %>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :body, I18n.t('news.body_description') %>
      <%= form.text_area :body, :rows => 5, :cols => 80 %>
    </p>
    <p>
      <%= form.submit I18n.t('news.submit_news') %>
      <span class="small"><%= I18n.t('news.news_with_advanced_formatting', :url => new_news_item_path) %></span>
    </p>
  <% end %>
  <% unless params[:controller] != 'streams' or @logged_in.share_activity? %>
    <%= render :partial => 'people/not_sharing_activity' %>
  <% end %>
</div>
