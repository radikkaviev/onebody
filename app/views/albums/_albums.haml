- if @albums.any?
  %table.table
    %tr
      %th
      %th= t('albums.table.name')
      %th= t('albums.table.picture_count')
      - if show_album_actions
        %th
    - @albums.each do |album|
      %tr.row-with-avatar
        %td.avatar
          = link_to album do
            = avatar_tag(album, size: :small, class: 'thumbnail')
        %td
          = link_to album.name, album
          - if Person === album.owner
            = t('by')
            = link_to album.owner.name, album.owner
        %td
          = album.pictures.count
        - if show_album_actions
          %td.actions
            = link_to edit_album_path(album), class: 'btn btn-info btn-xs' do
              = icon 'fa fa-pencil'
              = t('albums.edit.button')
            = link_to album, data: { method: :delete, confirm: t('are_you_sure') }, class: 'btn btn-delete btn-xs' do
              = icon 'fa fa-trash-o'
              = t('albums.delete.button')
- else
  %p= t('albums.none')
