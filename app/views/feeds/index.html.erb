<h2><%= t('feeds.feeds_for', :name => @person.name) %></h2>

<p><%= t('feeds.description') %></p>

<ul class="list">
  <%= render :partial => @feeds %>
</ul>

<% if @feeds.empty? %><p><em><%= t('feeds.none_added') %></em></p><% end %>

<h3><%= t('feeds.add_a_feed') %></h3>
<ul class="list">
  <li><%= link_to t('stream.twitter'), new_person_feed_path(@logged_in, :type => 'twitter'), :style => 'text-decoration:none;' %></li>
  <li><%= link_to t('stream.flickr'), new_person_feed_path(@logged_in, :type => 'flickr'), :style => 'text-decoration:none;' %></li>
  <li><%= link_to t('stream.rss'), new_person_feed_path(@logged_in, :type => 'rss'), :style => 'text-decoration:none;' %></li>
</ul>
