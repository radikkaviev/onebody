<% content_for :subnav do %>
  <li><%= link_to image_tag('eye.png', :alt => t('privacies.view_profile'), :class => 'icon') + ' ' + t('privacies.view_profile'), @person %></li>
  <li><%= link_to image_tag('feed_small.png', :alt => t('people.feeds'), :class => 'icon') + ' ' + t('people.feeds'), person_feeds_path(@person) %></li>
<% end %>

<% case params[:type]; when 'facebook' %>
  
  <h1><%= t('stream.import_facebook_updates') %></h1>

  <%= form_for [@person, @feed] do |form| %>
    <%= error_messages_for(form) %>
    <%= form.hidden_field :name, :value => 'Facebook' %>
    <%= hidden_field_tag :type, 'facebook' %>
    <ol>
      <li><%= t('feeds.log_into_facebook_html') %></li>
      <li>
        <%= t('feeds.copy_your_notifications_link_html') %>
        <%= image_tag('fb_notifications.png', :alt => t('feeds.facebook_notifications'), :style => 'border:1px solid #000;') %>
      </li>
      <li>
        <%= t('feeds.paste_link_here') %>: <%= form.text_field :url, :size => 60 %>
      </li>
      <li>
        <%= form.submit t('messages.preview') + '...' %>
      </li>
    </ol>
  <% end %>
  
<% when 'twitter' %>

  <h1><%= t('stream.import_twitter_updates') %></h1>

  <%= form_for [@person, @feed] do |form| %>  
    <%= error_messages_for(form) %>
    <%= form.hidden_field :name, :value => 'Twitter' %>
    <%= hidden_field_tag :type, 'twitter' %>
    <ol>
      <li><%= t('feeds.enter_twitter_username') %>: <%= form.text_field :url, :size => 15 %>
      </li>
      <li>
        <%= form.submit t('messages.preview') + '...' %>
      </li>
    </ol>
  <% end %>

<% when 'flickr' %>

  <h1><%= t('stream.import_flickr_photos') %></h1>

  <%= form_for [@person, @feed] do |form| %>  
    <%= error_messages_for(form) %>
    <%= form.hidden_field :name, :value => 'Flickr' %>
    <%= hidden_field_tag :type, 'flickr' %>
    <ol>
      <li>
        <%= t('feeds.log_into_flickr_html') %><br/>
        <%= image_tag('flickr_url.png', :alt => t('feeds.flickr_url'), :style => 'border:1px solid #000;margin:20px 0;') %>
      </li>
      <li>
        <%= t('feeds.copy_the_url_from_bar') %>:
        <%= form.text_field :url, :size => 60 %>
      </li>
      <li>
        <%= form.submit t('messages.preview') + '...' %>
      </li>
    </ol>
  <% end %>

<% when 'rss' %>

  <h1><%= t('stream.import_blog_feed') %></h1>

  <%= form_for [@person, @feed] do |form| %>  
    <%= error_messages_for(form) %>
    <%= hidden_field_tag :type, 'rss' %>
    <ol>
      <li>
        <%= t('feeds.blog_name') %>:
        <%= form.text_field :name, :value => @feed.name || 'Blog', :size => 10 %>
      </li>
      <li>
        <%= t('feeds.log_into_blog', :img => image_tag('feed_small.png', :alt => 'Feed Icon', :class => 'icon')) %>:
        <%= form.text_field :url, :size => 60 %>
      </li>
      <li>
        <%= form.submit t('messages.preview') + '...' %>
      </li>
    </ol>
  <% end %>

<% end %>

<p>
  <%= t('feeds.note_html') %>
</p>
