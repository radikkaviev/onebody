<% if event.cover_picture %>
  <%= link_to image_tag(photo_with_size_path(event.cover_picture, :size => 'tn', :type => 'picture'), :alt => event.name, :class => 'icon'), event %>
<% else %>
  <%= link_to image_tag('event.tn.gif', :alt => event.name, :class => 'icon'), event %>
<% end %>

<strong><%= link_to h(event.name), event %></strong>
<% unless @person %>
  by
  <% if event.person %>
    <%= link_to h(event.person.name), person_path(event.person) %>
  <% else %>
    ???
  <% end %>
<% end %>
<% if @person or event.admin? @logged_in %>
  <%= link_to "[edit]", edit_event_path(event), :class => 'discreet' %>
<% end %>
<br/>
<%= truncate h(event.description), 50, '...' %>
