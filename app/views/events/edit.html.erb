<h1><%= @event.new_record? ? 'Create' : 'Edit' %> Event</h1>
<% if @event.id %>
  <% content_for :subnav do %>
    <li><%= link_to 'View Event', @event %></li>
    <li><%= link_to 'Delete Event', delete_event_path(@event), :confirm => 'Are you sure? Deleting this event will cause all its pictures to be deleted as well.', :method => :post %></li>
  <% end %>
<% end %>

<% form_for :event, @event do |form| %>
  <p>
    <label for="event_name">Name of Event (required):</label>
    <%= form.text_field :name %><br/>
    <label for="event_when">When (required):</label>
    <%= form.text_field :when %><br/>
    <span style="background-color:#ffc;">MM/DD/YYYY</span> or <span style="background-color:#ffc;">MM/DD/YYYY HH:MM AM/PM</span><br/>
    <label for="event_description">Description:</label>
    <%= form.text_area :description, :rows => 4 %><br/>
    <br/>
    <%= submit_tag 'Save Changes' %>
  </p>
<% end %>