%ul.todo-list
  - tasks.each do |task|
    %li.task{ class: ("done" if task.completed), data: {id: task.id} }
      = form_for [:complete, task.group, task], html: { class: "complete-task-form" } do |form|
        - if @group.present?
          %span.handle
            %i.fa.fa-ellipsis-v
            %i.fa.fa-ellipsis-v  
        = form.check_box :completed, autocomplete: "off"
        %span.text
          = link_to task.name, [task.group, task]
        - if task.duedate
          %span.label.label-primary
            %i.fa.fa-calendar 
            = l(task.duedate)
        - if task.person
          %span.label.label-primary
            %i.fa.fa-user 
            = task.person.name
          %span.label.label-default
            %i.fa.fa-comments-o
            = t("tasks.index.comment_count", count: task.comments.count)
        .tools.show
          =link_to "", edit_group_task_path(task.group, task), class: "fa fa-edit"
          =link_to "", "#", class: "fa fa-trash-o"