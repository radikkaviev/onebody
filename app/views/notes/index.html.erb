<% content_for :subnav do %>
  <% if @person %>
    <li><%= link_to image_tag('user.png', :alt => t('person'), :class => 'icon') + ' ' + t('back_to') + ' ' + @person.name, @person %></li>
  <% else %>
    <li><%= link_to image_tag('group.png', :alt => t('group'), :class => 'icon') + ' ' + t('back_to') + ' ' + @group.name, @group %></li>
  <% end %>
<% end %>

<h1>
  <%= t('notes.notes') %>
  <% if @person %>
    <%= t('by') %> <%= link_to @person.name, @person %>
  <% elsif @group %>
    <%= t('in') %> <%= link_to @group.name, @group %>
  <% end %>
</h1>

<% @notes.each do |note| %>

  <div class="stream-item">
    <div class="stream-item-meta">
      <% if note.person %>
        <span class="nowrap">
          <a href="<%= url_for note.person %>">
            <%= image_tag note.person.has_photo? ? tn_person_photo_path(note.person) : (note.person.gender == 'Female' ? 'woman.tn.gif' : 'man.tn.gif'),
              :alt => note.person.name %>
          </a>
        </span>
      <% else %>
        <%= image_tag 'man.tn.gif', :alt => '' %>
      <% end %>
      <div style="clear:left;"></div>
    </div>
    <div class="stream-item-body">
      <% if note.title.to_s.any? %>
        <h2><%= link_to note.title, note %></h2>
        <%= render :partial => 'meta', :locals => {:note => note} %>
        <div>
          <%= white_list_with_removal auto_link(note.body) %>
        </div>
      <% else %>
        <h2></h2>
        <%= image_tag('note.png', :alt => t('notes.note'), :class => 'icon') %>
        <%= white_list_with_removal auto_link(note.body) %>
        <%= render :partial => 'meta', :locals => {:note => note} %>
      <% end %>

      <% if note.original_url %>
        <p class="small"><%= t('notes.note_imported_from') %> <%= link_to domain_name_from_url(note.original_url), note.original_url %>.</p>
      <% end %>

      <% if (count = note.comments.count) > 0 %><p><%= pluralize count, t('comment') %></p><% end %>
    </div>
</div>

<% end %>

<%= will_paginate @notes %>

<style type="text/css">
  .stream-item { display: block; }
</style>
