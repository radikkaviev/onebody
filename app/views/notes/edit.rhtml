<%= javascript_include_tag 'tiny_mce/tiny_mce.js' %>
<script type="text/javascript">
  tinyMCE.init({
  	mode: "exact",
  	elements: "note_body",
  	theme: "simple",
  	convert_newlines_to_brs : true,
  	invalid_elements: "pre,font"
  });
</script>

<h1>Edit Note</h1>

<%= form_tag(edit_note_url(:id => @note), :method => 'post') %>
  <p>
    <label for="note_title">Title:</label>
    <%= text_field_tag 'note[title]', white_list(@note.title), :id => 'note_title' %><br/>
    <label for="note_body">Note:</label><br/>
    <%= text_area_tag 'note[body]', white_list(@note.body), :id => 'note_body', :rows => '10' %><br/>
    <label for="note_group_id">Post to Group (optional):</label>
    <select name="note[group_id]" id="note_group_id">
      <option value="">None</option>
      <%= options_for_select @note.person.groups.map { |g| [g.name, g.id] }, @note.group_id %>
    </select><br/>
    <%= submit_tag 'Save Note', :style => 'width:100px;' %>
  </p>
</form>
