<%= javascript_include_tag 'tiny_mce/tiny_mce.js' %>
<script type="text/javascript">
  tinyMCE.init({
  	mode: "exact",
  	elements: "note_body",
  	theme: "advanced",
  	convert_newlines_to_brs : true,
  	invalid_elements: "pre,font"
  });
</script>

<% form_for @note do |form| %>

  <%= form.hidden_field :group_id %>
  <% if @note.group %>
    <p><em><%= I18n.t('notes.this_note_will_be_posted', :group => h(@note.group.name)) %></em></p>
    <% if @note.group.private? %>
      <p class="very-strong"><%= I18n.t('notes.this_note_will_not_be_private') %></p>
    <% end %>
  <% end %>

  <p>
    <%= form.label :title, I18n.t('notes.title') %> <%= form.text_field :title %><br/>
    <%= form.label :body, I18n.t('notes.body') %>  <%= form.text_field :body, :value => white_list(@note.body), :rows => 15, :cols => 80, :style => 'width:100%' %><br/>
    <%= form.submit I18n.t('notes.save_note') %>
  </p>
<% end %>
