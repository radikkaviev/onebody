<% content_for :subnav do %>
  <% if @logged_in and @logged_in.admin?(:edit_pages) %>
    <div style="float:right;"><%= link_to t('pages.edit_pages'), pages_path %></div>
  <% end %>
  <% unless @page.home? %>
    <li><%= link_to t('nav.home'), home_path %></li>
  <% end %>
  <% @page.navigation_pages.each do |page| %>
    <li><%= link_to page.title, page_path(page) %></li>
  <% end %>
<% end %>

<p id="breadcrumbs"><%= breadcrumbs_for @page %></p>

<h1>
  <% unless @page.published? %>
    <span class="discreet" style="font-size:14pt;">(<%= t('pages.unpublished') %>)</span><br/>
  <% end %>
  <%= @page.title %>
  <% if @logged_in and @logged_in.can_edit?(@page) %>
    <span style="font-size:10pt" class="discreet">
      <%= link_to t('edit'), edit_page_path(@page) %>
    </span>
  <% end %>
</h1>

<%= @page.body %>

