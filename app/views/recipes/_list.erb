<% if @recipe_pages and @recipe_pages.page_count > 1 %>
    <p class="page-nav">Page: <%= pagination_links @recipe_pages %></p>
<% end %>

<% today = Date.today %>
<table>
  <% recipes.each do |recipe| %>
    <tr>
      <td>
        <% if recipe.has_photo? %>
          <%= link_to image_tag(photo_path(:controller => 'recipes', :id => "#{recipe.id}.tn.jpg"), :alt => recipe.title, :class => 'no-border'), recipe %>
        <% end %>
      </td>
      <td>
        <strong><%= link_to h(recipe.title), recipe %></strong>
        <% if recipe.created_at >= today - DAYS_NEW %><%= image_tag 'new.gif', :alt => 'New!', :class => 'no-border' %><% end %>
        <% unless @person %>
          by
          <% if recipe.person %>
            <%= link_to h(recipe.person.name), person_path(recipe.person) %>
          <% else %>
            ???
          <% end %>
        <% end %>
        <% if @person or recipe.admin? @logged_in %>
          <%= link_to "[edit]", edit_recipe_path(recipe), :class => 'discreet' %>
          <%= link_to '[delete]', delete_recipe_path(recipe, :return_to => request.request_uri), :method => 'post', :confirm => 'Are you sure you want to delete this recipe?', :class => 'discreet' %>
        <% end %>
        <% unless @person %>
          Tags: <%= render :partial => 'tags/tags_with_delete', :locals => {:object => recipe} %>
        <% end %>
        <br/>
        <%= truncate h(recipe.description), 50, '...' %>
      </td>
    </tr>
  <% end %>
</table>

<% if @recipe_pages and @recipe_pages.page_count > 1 %>
  <p class="page-nav">Page: <%= pagination_links @recipe_pages %></p>
<% end %>
