<%= javascript_include_tag 'tiny_mce/tiny_mce.js' %>
<script type="text/javascript">
  tinyMCE.init({
  	mode: "exact",
  	elements: "recipe_ingredients,recipe_directions",
  	theme: "simple",
  	convert_newlines_to_brs : true,
  	invalid_elements: "pre,font"
  });
</script>

<% form_for @recipe, :html => {:multipart => true} do |form| %>
  <%= form.error_messages %>
  <p>
    <%= form.label :title, I18n.t("title") %>                     <%= form.text_field :title %>                  <br/>
    <%= form.label :tag_list, I18n.t("tag_list") %>               <%= form.text_field :tag_list %>               <br/>
    <%= form.label :serving_size, I18n.t("serving_size") %>       <%= form.select :serving_size, 1..100 %>       <br/>
    <%= form.label :description, I18n.t("description") %>         <%= form.text_area :description, :rows => 3 %><br/>
    <%= form.label :prep, I18n.t("prep_cook_time") %>             <%= form.text_field :prep %>                   <br/>
    <%= form.label :bake, I18n.t("bake_time") %>                  <%= form.text_field :bake %>                   <br/>
    <%= form.label :ingredients, I18n.t("ingredients") %>         <%= form.text_area :ingredients, :rows => 10 %><br/>
    <%= form.label :directions, I18n.t("directions") %>           <%= form.text_area :directions, :rows => 10 %> <br/>
    <%= form.label :notes, I18n.t("other_notes") %>               <%= form.text_area :notes, :rows => 3 %>
    <%= form.submit I18n.t("save_recipe") %>
  </p>
<% end %>
