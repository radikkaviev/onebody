<div id="searchresults">
  <h1><%= t('search_results') %></h1>

  <%= will_paginate recipes %>

  <p>
    <% if @items && @items.length > 0 %>
     <ul id="searchResultsul">
      <% for recipe in @items %>
        <li>
          <%= link_to recipe.title, recipe %> &nbsp; &nbsp; &mdash; &nbsp; &nbsp;
          <small><%= @mark_term ? highlight(recipe.description, @mark_term) : recipe.description %></small><br/>
          <div class="smaller"><%= @mark_term ? highlight(recipe.ingredients, @mark_term) : recipe.ingredients %></div>
        </li>
      <% end %>
      </ul>
    <% elsif @mark_term && @mark_term.length > 0 %>
      <%= t('recipes.no_results') %>
    <% else %>
      &nbsp;
    <% end %>
  </p>

  <%= will_paginate recipes %>
</div>
