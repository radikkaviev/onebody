<div id="searchresults">
  <h1><%= I18n.t('search_results') %></h1>

  <%= will_paginate recipes %>

  <p>
    <% if @items && @items.length > 0 %>
     <ul id="searchResultsul">
      <% for recipe in @items %>
        <li>
          <%= link_to h(recipe.title), recipe %> &nbsp; &nbsp; &mdash; &nbsp; &nbsp;
          <small><%= @mark_term ? highlight(h(recipe.description), @mark_term) : h(recipe.description) %></small><br/>
          <div class="smaller"><%= @mark_term ? highlight(h(recipe.ingredients), @mark_term) : h(recipe.ingredients) %></div>
        </li>
      <% end %>
      </ul>
    <% elsif @mark_term && @mark_term.length > 0 %>
      <%= I18n.t('recipes.no_results') %>
    <% else %>
      &nbsp;
    <% end %>
  </p>

  <%= will_paginate recipes %>
</div>
