<% content_for :sidebar do %>
  <%= render :partial => 'form' %>
<% end %>

<% content_for :subnav do %>
  <% if @logged_in.admin?(:edit_profiles) %>
    <div style="float:right;">
      <%= link_to t('search.new_family'), new_family_path %>
    </div>
  <% end %>
  <%= render :partial => 'subnav' %>
<% end %>

<p id="searching" style="font-size:14pt;display:none;">
  <%= image_tag 'spinner.gif', :alt => 'searching', :class => 'no-border' %>
  <%= t('search.searching') %>
</p>

<div id="results">
  <% if @people %>
    <%= render :partial => 'results' %>
  <% elsif params[:search_friends] %>
    <h2><%= t('search.find_your_friends') %></h2>
    <ol>
      <li><%= t('search.friends_search_html') %></li>
      <li><%= t("search.click_the_icon_to_add_them", :img => image_tag('contact_add.gif', :alt => t('friends.add_friend'), :class => 'icon')) %></li>
    </ol>
    <p>
      <%= t("search.add_as_many_friends_you_like_html", :url => person_friends_path(@logged_in)) %>
    </p>
  <% else %>
    <table>
      <tr>
        <td>
          <%= link_to_function image_tag('search.gif', :alt => t('search.search_the_directory')),
            "$('name').focus();new Effect.Highlight('name', {})" %>
        </td>
        <td>
          <strong><%= t("search.find_someone_quickly_html", :js => "$('search_name').focus();new Effect.Highlight('search_name', {})") %></strong>
          <%= t('search.use_advanced_search_html', :js => "$('name_search').focus();new Effect.Highlight('name_search', {})") %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to image_tag('directory.gif', :alt => t("search.browse_the_directory")), search_path(:browse => true) %>
        </td>
        <td>
          <%= t('search.browse_directory_description_html', :url => search_path(:browse => true)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to image_tag('business.gif', :alt => t('search.business_directory')), search_path(:business => true) %>
        </td>
        <td>
          <%= t('search.business_directory_description_html', :url => search_path(:business => true)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to image_tag('print.gif', :alt => t("search.printed_directory")), printable_directory_path %>
        </td>
        <td>
          <%= t('search.printed_directory_description_html', :url => printable_directory_path) %>
        </td>
      </tr>
    </table>
  <% end %>
</div>

<% if session[:touring] %><%= tour_popup('Directory Tab', '/pages/help/tour_directory', 450, 'right') %><% end %>
