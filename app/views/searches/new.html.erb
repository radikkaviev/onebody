<% if @people.nil? %>

  <% if params[:advanced].nil? %>

    <div id="search-page">
      <h2 class="search-heading"><%= t('search.heading', :name => Setting.get(:name, :community)) %></h2>
      <%= form_tag(search_path, :method => 'get') do %>
        <%= text_field_tag 'name', params[:name], :id => 'name_search', :class => 'search-field' %><br/>
        <%= submit_tag t('search.search') %>
        <%= link_to t('search.browse'), search_path(:browse => true), :class => 'button' %>
      <% end %>
      <ul class="links">
        <li><%= link_to t('search.advanced_search'), new_search_path(:advanced => true) %></li>
        <li><%= link_to t('search.printed_directory'), printable_directory_path %></li>
        <li><%= link_to t('search.business_directory'), search_path(:business => true) %></li>
      </ul>
    </div>

  <% else %>

    <% content_for :sidebar do %>
      <%= render :partial => 'form' %>
    <% end %>
    <p id="searching">
      <%= image_tag 'spinner.gif', :alt => 'searching', :class => 'no-border' %>
      <%= t('search.searching') %>
    </p>
    <div id="results"></div>

  <% end %>

  <% content_for :head do %>
    <script type="text/javascript">
      $(function(){ $('#name_search')[0].focus() });
    </script>
  <% end %>

<% else %>

  <% content_for :sidebar do %>
    <h2><%= t('search.heading', :name => Setting.get(:name, :community)) %></h2>
    <p>
      <%= t("search.people_found", :count => @count) %>
      <% if @logged_in.admin?(:view_hidden_profiles) and params[:show_hidden].nil? %>
        <%= t("search.not_showing_hidden_people") %>
      <% end %>
    </p>
    <%= form_tag(search_path, :method => 'get', :class => 'double-margin-top') do %>
      <%= text_field_tag 'name', params[:name], :id => 'name_search', :class => 'search-field' %>
      <%= submit_tag t('search.search') %>
    <% end %>
    <% if @search.show_businesses %>
      <p class="double-margin-top">
        <label for="category"><%= t('search.business_category') %></label>
        <select id="category" onchange="location.href='?business=true&category='+value">
          <option value=""><%= t('search.show_all') %></option>
          <%= options_for_select @business_categories, params[:category] %>
        </select>
      </p>
    <% end %>
  <% end %>

  <%= render :partial => 'results' %>

<% end %>
