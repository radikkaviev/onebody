<p><%= link_to image_tag('back.gif', :alt => t('groups.back_to_homepage'), :class => 'icon') + ' ' + t('groups.back_to_homepage'), groups_path %></p>

<% if @groups.any? %>

  <table class="iconed">
    <% @groups.each do |group| %>
      <tr>
        <td class="icon">
          <% if @logged_in.sees? group %><a href="<%= url_for group %>"><% end %>
            <% if group.has_photo? %>
              <%= image_tag small_group_photo_path(group), :alt => group.name %>
            <% else %>
              <%= image_tag 'group.small.jpg', :alt => group.name %>
            <% end %>
          <% if @logged_in.sees? group %></a><% end %>
        </td>
        <td>
          <span class="list-heading">
            <%= link_to h(group.name), group %>
            <% if group.private? %><%= image_tag('lock.gif', :alt => t('groups.private_group'), :class => 'icon') %><% end %>
          </span>
          <% if group.admin?(@logged_in) %>
            <%= link_to 'edit', edit_group_path(group), :class => 'discreet' %>
            <% if group.linked? %>
              <%= image_tag 'link.png', :alt => group.link_code, :class => 'icon' %>
            <% end %>
          <% end %>
          <% if group.description.to_s.any? %>
            <br/>
            <%=h group.description %>
          <% end %>
          <% if group.leader %>
            <br/>
            <%= t('groups.leader') %>: <%= link_to h(group.leader.name), person_path(group.leader) %>
          <% end %>
          <% if group.address.to_s.any? and group.can_send? @logged_in %>
            <br/>
            <%= t('people.email') %>: <%= mail_to u(group.full_address), h(group.full_address) %>
          <% end %>
          <br/>
          <%= t('people.person', :count => group.people.count) %>
        </td>
      </tr>
    <% end %>
  </table>

<% else %>

  <p><em><%= t('groups.no_groups_found') %></em></p>

<% end %>

<% if @logged_in.admin?(:manage_groups) and @hidden_groups.any? %>
  <h2><%= t('groups.hidden_groups') %></h2>
  <p>
    <%= t('groups.only_admins_see_this_list') %>:<br/>
    <%= @hidden_groups.map { |g| link_to(h(g.name), g) }.join(', ') %>
  </p>
<% end %>
