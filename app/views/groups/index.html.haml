- @title = t('groups.heading')

- if @unapproved_groups.any?
  .callout.callout-info
    = t('groups.following_are_pending_approval', count: @unapproved_groups.length)
    %table.table.group-list
      - @unapproved_groups.each do |group|
        %tr.row-with-avatar
          %td= link_to group.name, group

.row
  .col-md-4
    .box.box-info{style: 'margin-top: 25px'}
      .box-header
        %h3.box-title= t('groups.search.heading')
      .box-body
        = form_tag(groups_path, method: 'get', class: 'form-inline group-search-form') do
          .form-group
            = text_field_tag :name, params[:name], class: 'form-control', placeholder: t('groups.search.name_placeholder')
          .form-group
            = button_tag class: 'btn btn-info' do
              = icon 'fa fa-search'
              = t('groups.search.submit')

    .box.box-info
      .box-header
        %h3.box-title= t('groups.browse_by_category')
      .box-body
        .group-category-lookup.form-inline
          = select_tag 'category', options_for_select(@categories), include_blank: true, class: 'form-control'

    .box.box-success
      .box-header
        %h3.box-title= t('groups.create_a_group')
      .box-body
        %p
          = t('groups.if_cant_find_create_it')
        %p
          = link_to new_group_path, class: 'btn btn-success' do
            = icon 'fa fa-plus-circle'
            = t('groups.create_a_group')

  .col-md-8
    %h3= t('groups.your_groups')
    = render partial: 'person_groups'
