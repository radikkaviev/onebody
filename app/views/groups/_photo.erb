<div>
  <% if @group.photo.exists? %>
    <%= image_tag @group.photo.url(:medium), :alt => @group.name %>
  <% elsif @logged_in.can_edit?(@group) and params[:controller] == 'groups' and params[:action] == 'show' %>
    <div id="group-pic" onclick="location.href = '<%= edit_group_path %>#picture'">
      <%= link_to image_tag('picture.png', :alt => t('groups.change_this_picture'), :class => 'icon') + ' ' + t('groups.change_this_picture'), edit_group_path + '#picture' %>
    </div>
  <% else %>
    <%= image_tag 'group.jpg', :alt => @group.name %>
  <% end %>
</div>
