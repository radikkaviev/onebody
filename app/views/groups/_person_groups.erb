<% if @person.groups.count > 0 %>
  <table>
    <% @person.memberships.all(:order => 'groups.name', :include => :group).each do |membership| %>
      <% if group = membership.group %>
        <% if not group.hidden? or @logged_in.admin?(:manage_groups) %>
          <tr <% if group.hidden? %>class="grayed hidden-group" style="display:none;"<% end %>>
            <td>
              <% if group.has_photo? %>
                <%= image_tag tn_group_photo_path(group), :alt => group.name, :class => 'no-border' %>
              <% else %>
                <%= image_tag 'group.tn.jpg', :alt => group.name, :class => 'no-border' %>
              <% end %>
            </td>
            <td class="group">
              <%= link_to h(group.name), group %><br/>
              <% if me? or @logged_in.admin?(:manage_groups) %>
                <span>
                  <%= t('people.email') %>:
                  <% if membership.get_email %>
                    <strong title="<%= t('groups.email_from_group_is_on') %>"><%= t('groups.email_on') %></strong> |
                    <%= link_to t('groups.email_off'), group_membership_path(group, @person, :email => 'off'), :method => 'put', :confirm => t('groups.if_ok_you_will_stop_receiving'), :title => t('groups.configure_email_from_group') %>
                  <% else %>
                    <%= link_to t('groups.email_on'), group_membership_path(group, @person, :email => 'on'), :method => 'put', :confirm => t('groups.if_ok_you_will_start_receiving'), :title => t('groups.configure_email_from_group') %> |
                    <strong title="<%= t('groups.email_from_group_is_off') %>"><%= t('groups.email_off') %></strong>
                  <% end %>
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </table>
  <% if @logged_in.admin?(:manage_groups) and @person.groups.detect { |g| g.hidden? } %>
    <p><%= link_to_function t('people.show_hidden_groups'), "$$('.hidden-group').each(function(e){Element.toggle(e)})" %></p>
  <% end %>
<% elsif me? %>
  <p>
    <%= t('people.you_arent_in_any_groups') %>
    <% if params[:person_id] %>
      <%= t('people.find_a_group', :group => groups_url) %>
    <% end %>
  </p>
<% else %>
  <p><%= t('people.person_isnt_any_groups', :person => h(@person.first_name)) %></p>
<% end %>
