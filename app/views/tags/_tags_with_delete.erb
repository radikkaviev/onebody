<% controller ||= object.class.name.pluralize.downcase %>
<% if object.tags.any? %>
  <% object.tags.each do |tag| %>
    <%= link_to h(tag.name), tag_path(tag.name) %>
    <% if params[:controller] == controller %>
      <% if controller == 'verses' %>
        <%= link_to '[x]', delete_tag_from_verse(:id => object, :tag_id => tag.id), :title => 'Delete this tag.', :class => 'discreet', :style => 'margin-left:-5px;', :method => 'post', :confirm => 'Are you sure you want to delete this tag?' %>
      <% elsif controller == 'recipes' %>
        <%= link_to '[x]', delete_tag_from_recipe(:id => object, :tag_id => tag.id), :title => 'Delete this tag.', :class => 'discreet', :style => 'margin-left:-5px;', :method => 'post', :confirm => 'Are you sure you want to delete this tag?' %>
      <% elsif controller == 'music' %>
        <%= link_to '[x]', delete_tag_from_music(:id => object, :tag_id => tag.id), :title => 'Delete this tag.', :class => 'discreet', :style => 'margin-left:-5px;', :method => 'post', :confirm => 'Are you sure you want to delete this tag?' %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <em>none</em>
<% end %>