<h1><%= I18n.t('tags.tag') %>: <%=h @tag.name %></h1>

<% if @tag.verses.any? %>
  <h2><%= I18n.t('verses.verses') %></h2>
  <% @tag.verses.each do |verse| %>
    <%= render :partial => 'verses/verse', :locals => {:verse => verse} %>
  <% end %>
<% end %>

<% if @tag.recipes.any? %>
  <h2><%= I18n.t('recipes.recipes') %></h2>
  <%= render :partial => 'recipes/list', :locals => {:recipes => @tag.recipes.paginate(:page => 1, :per_page => 100)} %>
<% end %>
