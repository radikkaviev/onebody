<p>
  <%= form_tag url, :multipart => true, :method => 'put' do %>
    <%= render :partial => 'photo_fields' %>
    <br/>
    <%= t('photos.please_choose_photo') %><br/>
    <input type="submit" value="<%= t('photos.upload', :name => name) %>" class="submit">
    <% if defined? delete and delete %>
      <br/>
      <%= link_to t('photos.remove', :name => name), url, :method => 'delete', :confirm => t('are_you_sure') %>
    <% end %>
  <% end %>
</p>
