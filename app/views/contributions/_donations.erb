<% if @donations.any? %>
  <table>
    <% @donations.each do |donation| %>
      <tr>
        <% unless params[:person_id] %>
          <td><% if donation.person %><%= link_to donation.person.name, person_contributions_path(donation.person) %><% end %></td>
        <% end %>
        <td><%= donation.received_on.to_s(:date) %></td>
        <td><%= '%.02f' % (donation.amount_in_cents / 100) %> <%= donation.currency %></td>
        <td><%= donation.memo %></td>
        <td><%= donation.donation_type %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p><em><%= t('none') %></em></p>
<% end %>
