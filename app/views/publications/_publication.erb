<%= link_to image_tag(publication.file_content_type == 'application/pdf' ? 'acrobat.gif' : 'publication.gif', :alt => publication.name, :class => 'icon'), publication, :target => '_new' %>
<%= link_to h(publication.name), publication, :target => '_new' %>
<% if @logged_in.admin?(:manage_publications) %>
  <%= link_to '[' + I18n.t('delete') + ']', publication, :class => 'discreet', :method => 'delete', :confirm => I18n.t('are_you_sure') %>
<% end %>
<br/>
<%=h publication.description %>
