<% content_for :subnav do %>
  <li><%= link_to t('admin.syncs.syncs'), administration_syncs_path %></li>
<% end %>

<h1><%= t('admin.syncs.syncs') %> <%=h @sync.created_at.to_s %></h1>

<% if @counts %>
  <%= image_tag pie_chart_url(@counts, :width => 400, :height => 200, :title => t('admin.syncs.results')), :alt => t('admin.syncs.results') %>
<% end %>

<%= will_paginate @items %>

<table>
  <tr>
    <th><%= sortable_column_heading t('admin.syncs.type'),      'sync_items.syncable_type' %></th>
    <th><%= sortable_column_heading t('admin.syncs.name'),      'sync_items.name'          %></th>
    <th><%= sortable_column_heading t('admin.syncs.legacy_id'), 'sync_items.legacy_id'     %></th>
    <th><%= sortable_column_heading t('admin.syncs.operation'), 'sync_items.operation'     %></th>
    <th><%= sortable_column_heading t('admin.syncs.status'),    'sync_items.status'        %></th>
    <th>Errors</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%=h item.syncable_type %></td>
      <td><%= item.syncable_id ? link_to(h(item.name || '(blank)'), syncable_path(item)) : h(item.name || '(blank)') %></td>
      <td><%=h item.legacy_id %></td>
      <td><%=h item.operation %></td>
      <td><%=h item.status %></td>
      <td class="very-strong"><%=h item.error_messages.is_a?(Array) ? item.error_messages.join('; ') : item.error_messages %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @items %>
