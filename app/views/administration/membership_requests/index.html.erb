<h1>Group Membership Requests</h1>

<table>
  <% @reqs_by_group.each do |group, reqs| %>
    <tr>
      <td><%= group ? link_to(h(group.name), group) : '(group deleted)' %></td>
      <td><%= link_to pluralize(reqs.length, 'request'), group_memberships_path(group) %></td>
    </tr>
  <% end %>
</table>
