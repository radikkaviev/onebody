- @report = report
= render partial: 'title'
.row
  .col-md-9
    %table.table
      %thead
        %tr
          %th= t('reports.reports.group_contact_details.columns.first_name')
          %th= t('reports.reports.group_contact_details.columns.last_name')
          %th= t('reports.reports.group_contact_details.columns.email_address')
          %th= t('reports.reports.group_contact_details.columns.mobile_phone')
          %th= t('reports.reports.group_contact_details.columns.home_phone')
          %th= t('reports.reports.group_contact_details.columns.address')
          = render partial: 'body'
  .col-md-3
    .box.box-info.hidden-print
      .box-heading
      .box-body
        = form_for report, as: :options, url: url_for, html: {method: :get} do |f|
          .form-group
            = f.label t('reports.group')
            = report_group_field f, :group_id
          .form-group
            = f.submit t('reports.submit'), class: 'btn btn-info'
            = render partial: 'submit'

= render partial: 'count'

