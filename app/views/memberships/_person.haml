= content_tag :tr, id: "person#{person.id}" do
  %td.icon
    %a{:href => url_for person}
      = render partial: 'people/thumbnail', locals: {person: person}
  %td.name
    = link_to person.name, person
    - if @group.admin?(person, :exclude_global_admins)
      %span.discreet= t('admin.admin')
  - if @can_edit
    %td.action
      = link_to '', group_membership_path(@group, person.id), remote: true, method: :delete, class: 'delete-icon delete-action', style: 'display:none;'
      - if @group.admin?(person, :exclude_global_admins)
        = link_to t('memberships.demote'), group_membership_path(@group, person.id), method: :put, class: 'promote-action', style: 'display:none;'
      - else
        = link_to t('memberships.promote'), group_membership_path(@group, person.id, promote: true), method: :put, class: 'promote-action', style: 'display:none;'
