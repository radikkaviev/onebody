= content_tag :tr, id: "person#{person.id}" do
  %td.icon
    %a{:href => url_for person}
      = render partial: 'people/thumbnail', locals: {person: person}
  %td.name
    = link_to person.name, person
    - if @group.admin?(person, :exclude_global_admins)
      %span.discreet= t('admin.admin')
  %td.birthday
    = person.birthday.strftime('%B %d')
