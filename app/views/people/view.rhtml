<% if @logged_in.admin? %>
  <%= form_tag :controller => 'prayer', :action => 'event_signup', :id => @person %>
    Sign up for prayer:
    <%= text_field_tag 'start', nil %>
    <%= submit_tag 'Save' %>
  </form>
<% end %>
