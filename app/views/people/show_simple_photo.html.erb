<div style="width:75px;float:right;text-align:right;">
  <%= link_to_function '[' + t('close') + ']', 'Element.hide("popup")', :class => 'discreet' %>
</div>

<h2><%= @person.name %></h2>

<% if @person.photo.exists? or not @family.photo.exists? %>
  <%= render :partial => 'photo' %>
<% else %>
  <%= render :partial => 'families/photo' %>
<% end %>