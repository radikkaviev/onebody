<% if person.has_photo? %>
  <%= image_tag photo_with_size_path(person, :size => 'tn', :type => 'person'), :alt => person.name, :class => 'icon thumbnail' %>
<% else %>
  <% if ['male', 'boy', 'man'].include? person.gender.to_s.downcase %>
    <%= image_tag 'man.tn.gif', :alt => person.name, :class => 'icon thumbnail' %>
  <% elsif ['female', 'girl', 'woman'].include? person.gender.to_s.downcase %>
    <%= image_tag 'woman.tn.gif', :alt => person.name, :class => 'icon thumbnail' %>
  <% end %>
<% end %>
