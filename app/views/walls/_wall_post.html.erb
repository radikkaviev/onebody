<%= link_to_function I18n.t("post_a_message"), "Element.show('wall_message'); $('message_body').focus();" %>
on <%=h @person.name_possessive %> wall.

<div id="wall_message">
  <% remote_form_for Message.new(:wall => @person), :html => {:style => 'border:none;'}, :update => 'wall_content' do |form| %>
    <%= form.hidden_field :wall_id %>
    <em><%= I18n.t("wall.to_send_a_private_message", :url => new_message_path(:to_person_id => @person)) %></em><br/>
    <%= form.text_area :body, :rows => 3, :cols => 40 %>
    <strong><%= I18n.t("please_respect_the_privacy_of_others") %></strong><br/>
    <%= submit_tag I18n.t('wall.save_message')%>
  <% end %>
</div>

<script type="text/javascript">Element.hide('wall_message');</script>
