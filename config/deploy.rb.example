set :user, 'deploy'
set :runner, user

set :scm, :git
set :repository, "git://github.com/seven1m/onebody.git"
set :repository_cache, 'git_cache'
set :deploy_via, :remote_cache

set :deploy_to, "/var/www/apps/#{application}"

role :app, 'beonebody.org'
